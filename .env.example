# ==============================================
# Unified Environment Configuration
# ==============================================
# This file contains all environment variables for both frontend and backend.
# Copy this file to .env and update the values as needed.

# ==============================================
# Backend Configuration (AdonisJS)
# ==============================================

# Server Configuration
PORT=3001
NODE_ENV=development
HOST=0.0.0.0
LOG_LEVEL=info

# AdonisJS App Key (generate with: node ace generate:key)
APP_KEY=your_32_character_app_key_here

# Session Configuration
SESSION_DRIVER=cookie

# CORS Settings
CORS_ORIGIN=*

# Database Configuration (MySQL/MariaDB)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=puzzle_minigames

# Socket.io Configuration
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# SMS Configuration (Melipayamak)
# Get credentials from https://panel.melipayamak.com
MELIPAYAMAK_USERNAME=
MELIPAYAMAK_PASSWORD=

# Domain-specific static file serving (optional)
# Format: domain1:path1,domain2:path2
# Example: DOMAIN_STATIC_PATHS=example.com:/var/www/example,app.example.com:/var/www/app
DOMAIN_STATIC_PATHS=

# Mellipayamak SMS Configuration (for OTP)
MELLIPAYAMAK_ENDPOINT=rest.payamak-panel.com
MELLIPAYAMAK_USERNAME=9901212697
MELLIPAYAMAK_PASSWORD=your-api-key-here
MELLIPAYAMAK_PATTERN_CODE=413580

# ==============================================
# Frontend Configuration (Mobile App)
# ==============================================

# API Base URL - Backend API endpoint
# Development: http://localhost:3001/api
# Production: https://api.yourdomain.com/api
VITE_API_BASE_URL=http://localhost:3001/api

# Socket.io Server URL
# Development: http://localhost:3001
# Production: https://api.yourdomain.com
VITE_SOCKET_URL=http://localhost:3001

# App Configuration
VITE_APP_NAME=اینفرنال
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_SOCKET=true
VITE_ENABLE_PWA=true

# ==============================================
# Deployment Configuration
# ==============================================

# Base URL for QR code generation
# This should be the public URL where players access the game
# Example: https://yourdomain.com/minigame-access
QR_BASE_URL=http://localhost:3000/minigame-access

