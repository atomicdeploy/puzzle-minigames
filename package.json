{
  "name": "infernal-puzzle-game",
  "version": "1.0.0",
  "description": "اینفرنال - 3D Puzzle Mini-Games",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/mobile-app",
    "packages/backend"
  ],
  "scripts": {
    "mobile:dev": "npm run dev --workspace=packages/mobile-app",
    "mobile:build": "npm run build --workspace=packages/mobile-app",
    "mobile:generate": "npm run generate --workspace=packages/mobile-app",
    "backend:dev": "npm run dev --workspace=packages/backend",
    "backend:build": "npm run build --workspace=packages/backend",
    "backend:start": "npm run start --workspace=packages/backend",
    "dev": "concurrently \"npm run mobile:dev\" \"npm run backend:dev\"",
    "build": "npm run mobile:build && npm run backend:build",
    "install:all": "npm install && npm install --workspace=packages/mobile-app && npm install --workspace=packages/backend"
  },
  "keywords": [
    "puzzle",
    "game",
    "3d",
    "sudoku",
    "persian"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@capacitor/android": "^5.5.1",
    "@capacitor/core": "^5.5.1",
    "@capacitor/haptics": "^5.0.6",
    "jszip": "^3.10.1",
    "qrcode": "^1.5.4",
    "three": "^0.160.0",
    "uuid": "^13.0.0",
    "matter-js": "^0.20.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.5.1",
    "concurrently": "^8.2.2",
    "vite": "^5.0.10",
    "vite-plugin-pwa": "^0.17.4"
  }
}
